{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Infinilist",
      "description": "A service to create lists and store information",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:3000",
    "basePath": "/",
    "tags": [
      {
        "name": "Users",
        "description": "API for users in the system"
      }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/api/registro": {
          "post": {
            "tags": [
              "User"
            ],
            "description": "Creacion de nuevo usuario",
            "parameters": [
              {
                "name": "user",
                "in": "body",
                "description": "User that we want to create",
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            ],
            "produces": [
              "application/json"
            ],
            "responses": {
              "200": {
                "description": "New user is created",
                "schema": {
                  "$ref": "#/definitions/User"
                }
              },
              "400": {
                "description": "User already exists",
                "schema": {
                  "$ref": "#/definitions/User"
              }
            }
          } 
        }
        },
        "/api/login": {
          "get": {
              "tags": [
                "User"
              ],
              "description": "Inicio de sesión",
              "parameters": [
                {
                    "id": "user",
                    "in": "body",
                    "description": "User that will login",
                    "schema": {
                        "$ref": "#/definitions/User"
                        }
                    }
                ],
              "summary": "Inicio de sesión",
              "responses": {
                "200": {
                  "description": "OK",
                  "schema": {
                    "$ref": "#/definitions/User"
                  }
                },
                "400":{
                  "description":"User or password are not correct",
                  "schema": {
                    "$ref":"#/definitions/User"
                  }
                }
              }
            }
        },
        "/api/perfil/:id":{
            "get":{
              "tags": [
                "User"
              ]
            }
        },
        "/api/editar/:id":{
            "put":{
              "tags": [
                "User"
              ]
            }
        },
        "/api/borrarU/:id":{
            "delete":{
              "tags": [
                "User"
              ]
            }
        },
        "'/api/getList/:user'":{
            "get":{
              "tags": [
                "List"
              ]
            }
        },
        "/api/getSingle/:id":{
            "get":{
              "tags": [
                "List"
              ]
            }
        },
        "/api/crearL":{
            "post":{
              "tags": [
                "List"
              ]
            }
        },
        "/api/borrarL/:id":{
            "delete":{
              "tags": [
                "List"
              ]
            }
        },
        "upload":{
            "post":{
              "tags": [
                "List"
              ]
            }
        }

      },
      "definitions": {
        "User": {
          "required": [
            "nombre",
            "apellido",
            "correo",
            "password",
            "url",
            "sexo",
            "id"
          ],
          "properties": {
            "nombre": {
              "type": "string"
            },
            "apellido": {
                "type": "string"
            },
            "correo": {
                "type": "string"
              },
            "passsword": {
              "type": "string"
            },
            "url": {
              "type": "string"
            },
            "sexo":{
                "type": "string"
            },
            "id":{
                "type":"string"
            }
            
                  
            }
            
          },
        "List": {
            "required": [
                "nombre",
                "tipo"
              ],
            "properties":{
                "nombre": {
                    "type": "string"
                  },
                  "tipo": {
                      "type": "string"
                  },
                  "descripcion": {
                      "type": "string"
                    },
                  "imagen": {
                    "type": "string"
                  },
                  "elementos": {
                    "type": "array"
                  },
                  "id":{
                      "type": "string"
                  },
                  "user":{
                      "type":"string"
                  }
            }
        }
        }
        
       
      }
  